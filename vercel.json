{
    "version": 2,
    "builds": [
        {
            "src": "frontend/**/*",
            "use": "@vercel/static"
        },
        { 
            "src": "backend/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/backend/inquire",
            "dest": "/backend/index.js"
        },
        {
            "src": "/backend/admin/inquiries",
            "dest": "/backend/index.js"
        },
        {
            "src": "/backend/admin/login",
            "dest": "/backend/index.js"
        },
        {
            "src": "/backend/admin/logout",
            "dest": "/backend/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}